{
  "name": "@webfragments/core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./elements": {
      "types": "./dist/types/elements.d.ts",
      "import": "./dist/elements.js",
      "default": "./dist/elements.js"
    },
    "./fragments/party-button": {
      "types": "./src/fragments/party-button/index.d.ts",
      "import": "./dist/party-button/index.js",
      "default": "./dist/party-button/index.js"
    },
    "./fragments/dashboard": {
      "types": "./src/fragments/dashboard/index.d.ts",
      "import": "./dist/dashboard/index.js",
      "default": "./dist/dashboard/index.js"
    },
    "./dist/assets/style.css": "./dist/assets/style.css"
  },
  "files": [
    "dist",
    "src/fragments/*/index.d.ts"
  ],
  "scripts": {
    "dev": "vite --port 3001",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:lib && pnpm run build:demos",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:lib": "vite build",
    "build:demos": "pnpm run build:demo:party-button && pnpm run build:demo:dashboard",
    "build:demo:party-button": "FRAGMENT=party-button vite build --mode demo",
    "build:demo:dashboard": "FRAGMENT=dashboard vite build --mode demo",
    "clean": "rm -rf dist",
    "serve:party-button": "cd src/fragments/party-button/demo && vite --config ../../../../vite.config.ts --port 3002",
    "serve:dashboard": "cd src/fragments/dashboard/demo && vite --config ../../../../vite.config.ts --port 3003",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "canvas-confetti": "^1.9.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
} 